<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:RepasoApp.Views"
             x:Class="RepasoApp.Views.ConfirmDeleteDialog">
    <Design.DataContext>
        <views:ConfirmDeleteDialog />
    </Design.DataContext>
    <StackPanel Spacing="8" Width="360">
        <TextBlock Text="Confirmar eliminación" FontSize="18"/>
        <TextBlock Text="{Binding TextoConfirmacion}" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
            <Button Content="Aceptar" Command="{Binding AceptarCommand}" Width="100"/>
            <Button Content="Cancelar" Command="{Binding CancelarCommand}" Width="100"/>
        </StackPanel>
    </StackPanel>
</UserControl>

