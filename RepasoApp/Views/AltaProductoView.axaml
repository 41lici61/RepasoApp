<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:RepasoApp.ViewModels"
             x:Class="RepasoApp.Views.AltaProductoView"
             x:DataType="viewModels:AltaProductoViewModel">
    <Design.DataContext>
        <viewModels:AltaProductoViewModel />
    </Design.DataContext>
    <ScrollViewer>
        <StackPanel Spacing="8" Width="600">
            <TextBlock Text="Alta de producto" FontSize="22"/>
            <TextBlock Text="Código de barras"/>
            <TextBox Text="{Binding Producto.CodigoBarras, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Descripción"/>
            <TextBox Text="{Binding Producto.Descripcion, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Cantidad"/>
            <NumericUpDown Minimum="0" Maximum="100000" Value="{Binding Producto.Cantidad}"/>
            <TextBlock Text="Categoría"/>
            <ComboBox ItemsSource="{Binding Categorias}" SelectedItem="{Binding Producto.Categoria}"/>
            <TextBlock Text="Fecha de entrada"/>
            <DatePicker SelectedDate="{Binding Producto.FechaEntrada}"/>
            <CheckBox Content="Activo" IsChecked="{Binding Producto.Activo}"/>
            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,8,0,0">
                <Button Content="Guardar" Command="{Binding GuardarCommand}" Width="120"/>
                <Button Content="Limpiar" Command="{Binding LimpiarCommand}" Width="120"/>
            </StackPanel>
            <TextBlock Text="{Binding Mensaje}" Foreground="Red" TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>

