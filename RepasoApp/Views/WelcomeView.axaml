<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RepasoApp.Views.WelcomeView"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             xmlns:viewModels="clr-namespace:RepasoApp.ViewModels">
    <Design.DataContext>
        <viewModels:WelcomeViewModel />
    </Design.DataContext>
    <StackPanel  Spacing="12">
        <TextBlock Text="Bienvenido" FontSize="26"/>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Image Width="80" Height="80" asyncImageLoader:ImageLoader.Source="{Binding Usuario.ImageUrl}"/>
            <StackPanel>
                <TextBlock Text="{Binding Usuario.Nombre}" FontSize="18"/>
                <TextBlock Text="{Binding Usuario.Email}" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,10,0,0">
            <Button Content="Alta Producto" Command="{Binding IrAltaCommand}" Width="140"/>
            <Button Content="Consulta Productos" Command="{Binding IrConsultaCommand}" Width="180"/>
            <Button Content="Cerrar sesión" Command="{Binding LogoutCommand}" Width="140"/>
        </StackPanel>
    </StackPanel>
</UserControl>

